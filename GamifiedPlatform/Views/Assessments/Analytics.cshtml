@model IEnumerable<GamifiedPlatform.Models.AssessmentAnalyticsResult>

@{
    ViewData["Title"] = "Assessment Analytics";
}

<h1>Assessment Analytics</h1>

<table class="table">
    <thead>
        <tr>
            <th>Assessment ID</th>
            <th>Title</th>
            <th>Total Marks</th>
            <th>Passing Marks</th>
            <th>Average Score</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AssessmentID</td>
                <td>@item.AssessmentTitle</td>
                <td>@(item.TotalMarks.HasValue ? item.TotalMarks.ToString() : "N/A")</td>
                <td>@(item.PassingMarks.HasValue ? item.PassingMarks.ToString() : "N/A")</td>
                <td>@(item.AverageScore.HasValue ? item.AverageScore.Value.ToString("0.00") : "N/A")</td>
            </tr>
        }
    </tbody>
</table>

<form method="get" action="@Url.Action("Index", "Assessments")">
    <button type="submit" class="btn btn-secondary">Back to Assessments</button>
</form>


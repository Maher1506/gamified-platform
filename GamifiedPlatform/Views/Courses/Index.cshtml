@model IEnumerable<GamifiedPlatform.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-5">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <a href="@Url.Action("Create", "Courses")" class="btn btn-success mb-3">Create New Course</a>

            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Title</th>
                        <th>Learning Objective</th>
                        <th>Credit Points</th>
                        <th>Difficulty Level</th>
                        <th>Pre-Requisites</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            <td>@Html.DisplayFor(modelItem => item.LearningObjective)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreditPoints)</td>
                            <td>@Html.DisplayFor(modelItem => item.DifficultyLevel)</td>
                            <td>@Html.DisplayFor(modelItem => item.PreRequisites)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>
                                <a href="@Url.Action("Edit", "Courses", new { id = item.CourseId })" class="btn btn-warning btn-sm">Edit</a>
                                <a href="@Url.Action("Details", "Courses", new { id = item.CourseId })" class="btn btn-info btn-sm">Details</a>
                                <a href="@Url.Action("Delete", "Courses", new { id = item.CourseId })" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@model IEnumerable<GamifiedPlatform.Models.PersonalizationProfile>

@{
    ViewData["Title"] = "Personalization Profiles";
}

<div class="container mt-5">

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">@ViewData["Title"]</h1>
    </div>

    <!-- Table Section -->
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.PreferedContentType)</th>
                        <th>@Html.DisplayNameFor(model => model.EmotionalState)</th>
                        <th>@Html.DisplayNameFor(model => model.PersonalityType)</th>
                        <th>@Html.DisplayNameFor(model => model.Learner.LearnerId)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.PreferedContentType)</td>
                            <td>@Html.DisplayFor(modelItem => item.EmotionalState)</td>
                            <td>@Html.DisplayFor(modelItem => item.PersonalityType)</td>
                            <td>@Html.DisplayFor(modelItem => item.Learner.LearnerId)</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.ProfileId" class="btn btn-info btn-sm">Details</a>
                                    <form method="post" asp-action="DeletePersonalizationProfile" asp-route-profileId="@item.ProfileId" asp-route-learnerId="@item.Learner.LearnerId" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this profile?');">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Success and Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
}

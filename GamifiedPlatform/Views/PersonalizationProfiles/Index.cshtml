@model IEnumerable<GamifiedPlatform.Models.PersonalizationProfile>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @if (ViewContext.HttpContext.Request.Method == "POST" && !ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(true, "Please fix the following errors:")
        </div>
    }

    <form method="post" action="/LearningPaths/Index">
        <label for="learnerID"> LearnerID</label>
        <input type="number" id="learnerID" name="LearnerID" />
        <button type="submit"> filter </button>
    </form>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PreferedContentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmotionalState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalityType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Learner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            @if (Model == null || !Model.Any())
            {
                <p>No data available</p>
            }
            else{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PreferedContentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmotionalState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonalityType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Learner.LearnerId)
            </td>
            
        </tr>
}
}
    </tbody>
</table>

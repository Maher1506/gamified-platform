@model IEnumerable<GamifiedPlatform.Models.Ranking>

@{
    ViewData["Title"] = "Filtered Leaderboard";
    var learnerId = ViewBag.LearnerId; // To link back to the profile
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Filtered Leaderboard</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-hover shadow-sm">
            <thead class="thead-dark">
                <tr>
                    <th>Board ID</th>
                    <th>Course ID</th>
                    <th>Total Points</th>
                    <th>Rank</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BoardId</td>
                        <td>@item.CourseId</td>
                        <td>@item.TotalPoints</td>
                        <td>@item.Rank</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">
            No leaderboard data found for this learner.
        </div>
    }

    <!-- Back to Profile Button -->
    <div class="text-center mt-4">
        <a asp-action="Index" asp-controller="Learner" asp-route-id="@learnerId" class="btn btn-outline-secondary">
            Back to Profile
        </a>
    </div>
</div>

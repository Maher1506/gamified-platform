@model IEnumerable<LearningPath>

@{
    ViewData["Title"] = "Monitor Learning Path";
}

<div class="container mt-5">
    <h2 class="text-center text-info">Learning Paths</h2>

    <table class="table table-striped table-bordered mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Path ID</th>
                <th>Learner ID</th>
                <th>Profile ID</th>
                <th>Completion Status</th>
                <th>Custom Content</th>
                <th>Adaptive Rules</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var path in Model)
            {
                <tr>
                    <td>@path.PathId</td>
                    <td>@path.LearnerId</td>
                    <td>@path.ProfileId</td>
                    <td>@path.CompletionStatus</td>
                    <td>@path.CustomContent</td>
                    <td>@path.AdaptiveRules</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a asp-action="Profile" asp-route-id="@ViewBag.LearnerId" class="btn btn-secondary">Back to Profile</a>
    </div>
</div>

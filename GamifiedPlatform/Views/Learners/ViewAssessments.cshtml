@model IEnumerable<GamifiedPlatform.Models.Assessment>

<div class="container mt-5">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary text-center mb-4">Your Assessments</h2>
    </div>

    <!-- Table Section -->
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Assessment ID</th>
                        <th>Course ID</th>
                        <th>Module ID</th>
                        <th>Title</th>
                        <th>Type</th>
                        <th>Grade</th>
                        <th>Total Marks</th>
                        <th>Passing Marks</th>
                        <th>Weightage</th>
                        <th>Criteria</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var assessment in Model)
                    {
                        <tr>
                            <td>@assessment.Id</td>
                            <td>@assessment.CourseId</td>
                            <td>@assessment.ModuleId</td>
                            <td><strong>@assessment.Title</strong></td>
                            <td>@assessment.Type</td>
                            <td class="text-center">
                                @if (assessment.Grade >= assessment.PassingMarks)
                                {
                                    <span class="badge bg-success">@assessment.Grade</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@assessment.Grade</span>
                                }
                            </td>
                            <td>@assessment.TotalMarks</td>
                            <td>@assessment.PassingMarks</td>
                            <td>@assessment.Weightage %</td>
                            <td>@assessment.Criteria</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

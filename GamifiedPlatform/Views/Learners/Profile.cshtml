@model GamifiedPlatform.Models.Learner

@{
    ViewData["Title"] = "Learner Dashboard";
}

<div class="container mt-5">
    <!-- Profile Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-dark text-white">
            <h2 class="mb-0">Welcome, @Model.FirstName @Model.LastName</h2>
        </div>

        <div class="row align-items-center p-4">
            <!-- Profile Picture -->
            <div class="col-md-3 text-center">
                <img src="@(string.IsNullOrEmpty(Model.ProfilePicturePath) ? "https://cdn-icons-png.flaticon.com/512/149/149071.png" : Model.ProfilePicturePath)"
                     alt="Profile Picture"
                     class="img-fluid rounded-circle shadow-sm"
                     style="width: 150px; height: 150px; object-fit: cover;" />
            </div>

            <!-- Profile Details -->
            <div class="col-md-9">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Name:</strong> @Model.FirstName @Model.LastName</li>
                    <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                    <li class="list-group-item"><strong>Gender:</strong> @Model.Gender</li>
                    <li class="list-group-item"><strong>Birth Date:</strong> @(Model.BirthDate?.ToString("dd/MM/yyyy") ?? "Not provided")</li>
                    <li class="list-group-item"><strong>Country:</strong> @Model.Country</li>
                    <li class="list-group-item"><strong>Cultural Background:</strong> @Model.CulturalBackground</li>
                </ul>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="card-footer d-flex justify-content-center gap-2">
            <a asp-action="Edit" asp-route-id="@Model.LearnerId" class="btn btn-outline-primary">Edit Profile</a>
            <a asp-action="ViewAssessments" asp-route-learnerId="@Model.LearnerId" class="btn btn-outline-secondary">View Assessments</a>
            <a asp-action="EnrolledCourses" asp-route-id="@Model.UserId" class="btn btn-outline-success">View Courses</a>
            <form asp-action="DeleteAccount" method="post" onsubmit="return confirm('Are you sure you want to delete your account? This action cannot be undone.');" class="d-inline">
                <input type="hidden" name="LearnerId" value="@Model.LearnerId" />
                <button type="submit" class="btn btn-outline-danger">Delete Account</button>
            </form>
        </div>
    </div>

    <!-- Quick Access Cards (Top) -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">View Personalization Profiles</h5>
                </div>
                <div class="card-body text-center">
                    <a asp-action="ViewPersonalizationProfiles" asp-route-learnerId="@Model.LearnerId" class="btn btn-outline-primary">View Profiles</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">View Notifications</h5>
                </div>
                <div class="card-body text-center">
                    <a asp-action="ViewNotifications" asp-route-learnerId="@Model.LearnerId" class="btn btn-outline-info">View Notifications</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Monitor Path</h5>
                </div>
                <div class="card-body text-center">
                    <a asp-action="MonitorPath" asp-route-learnerId="@Model.LearnerId" class="btn btn-outline-success">Monitor Path</a>
                </div>
            </div>
        </div>

        <!-- View Leaderboards Cards -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">View All Leaderboards</h5>
                </div>
                <div class="card-body text-center">
                    <a asp-action="GetAllLeaderboards" asp-route-learnerId="@Model.LearnerId" class="btn btn-outline-primary">View Leaderboards</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">View Leaderboards</h5>
                </div>
                <div class="card-body text-center">
                    <a asp-action="LeaderboardFilter" asp-route-learnerId="@Model.LearnerId" class="btn btn-outline-info">View Leaderboards</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Form-Based Cards (Bottom) -->
    <div class="row">
        <!-- Enroll in a Course -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5>Enroll in a Course</h5>
                </div>
                <div class="card-body">
                    <form asp-action="EnrollInCourse" method="post">
                        <input type="hidden" name="LearnerId" value="@Model.LearnerId" />
                        <div class="form-group">
                            <label for="CourseId">Course ID:</label>
                            <input type="number" class="form-control" id="CourseId" name="CourseId" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mt-2">Enroll</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Add Goal -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5>Add a Goal</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddGoal" method="post">
                        <input type="hidden" name="LearnerId" value="@Model.LearnerId" />
                        <div class="form-group">
                            <label for="GoalId">Goal ID:</label>
                            <input type="number" class="form-control" id="GoalId" name="GoalId" required>
                        </div>
                        <button type="submit" class="btn btn-secondary w-100 mt-2">Add Goal</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Add a Post</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddPost" method="post">
                        <input type="hidden" name="LearnerId" value="@Model.LearnerId" />
                        <div class="form-group">
                            <label for="ForumId">Forum ID:</label>
                            <input type="number" class="form-control" id="ForumId" name="ForumId" required>
                        </div>
                        <div class="form-group">
                            <label for="Post">Post Content:</label>
                            <textarea class="form-control" id="Post" name="Post" rows="3" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-warning w-100 mt-2">Submit Post</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Give Feedback</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddFeedback" method="post">
                        <input type="hidden" name="LearnerID" value="@Model.LearnerId" />
                        <div class="form-group">
                            <label for="ActivityID">Activity ID:</label>
                            <input type="number" class="form-control" id="ActivityID" name="ActivityID" required>
                        </div>
                        <div class="form-group">
                            <label for="emotionalState">Emotional State:</label>
                            <input type="text" class="form-control" id="emotionalState" name="emotionalState" required>
                        </div>
                        <button type="submit" class="btn btn-danger w-100 mt-2">Submit Feedback</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@model GamifiedPlatform.Models.Instructor

@{
    ViewData["Title"] = "Edit Instructor";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Edit Instructor</h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                    }

                    <form asp-action="UpdateInfo" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="InstructorId" name="instructorID" />
                         <!-- Profile Picture -->
                        <div class="mb-3">
                            <label for="ProfilePicture" class="form-label">Profile Picture</label>
                            <input type="file" id="ProfilePicture" name="ProfilePicture" class="form-control" />
                            @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                            {
                                <img src="@Model.ProfilePicturePath" alt="Profile Picture" class="img-thumbnail mt-2" style="max-width: 150px;" />
                            }
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" name="name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LatestQualification" class="form-label">Latest Qualification</label>
                            <input asp-for="LatestQualification" class="form-control" name="latestQualification" />
                            <span asp-validation-for="LatestQualification" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ExpertiseArea" class="form-label">Expertise Area</label>
                            <input asp-for="ExpertiseArea" class="form-control" name="expertiseArea" />
                            <span asp-validation-for="ExpertiseArea" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" name="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@model GamifiedPlatform.Models.Instructor

@{
    ViewData["Title"] = "Edit Instructor";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Edit Instructor</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="InstructorId" />

                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label"></label>
                            <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LatestQualification" class="form-label"></label>
                            <input asp-for="LatestQualification" class="form-control" />
                            <span asp-validation-for="LatestQualification" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ExpertiseArea" class="form-label"></label>
                            <input asp-for="ExpertiseArea" class="form-control" />
                            <span asp-validation-for="ExpertiseArea" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

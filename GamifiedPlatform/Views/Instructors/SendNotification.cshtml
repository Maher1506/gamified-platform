@model GamifiedPlatform.Models.Notification

@{
    ViewData["Title"] = "Send Notification to Learner";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Send Notification</h2>
        </div>
        <div class="card-body">
            @if (ViewData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @ViewData["SuccessMessage"]
                </div>
            }

            <form asp-action="SendNotification" method="post">
                <div class="mb-3">
                    <label for="LearnerID" class="form-label">Learner ID</label>
                    <input type="number" class="form-control" id="LearnerID" name="LearnerID" required />
                </div>

                <div class="mb-3">
                    <label for="Message" class="form-label">Message</label>
                    <textarea class="form-control" id="Message" name="Message" rows="4" required></textarea>
                </div>

                <div class="mb-3">
                    <label for="UrgencyLevel" class="form-label">Urgency Level</label>
                    <select class="form-select" id="UrgencyLevel" name="UrgencyLevel" required>
                        <option value="High">High</option>
                        <option value="Medium">Medium</option>
                        <option value="Low">Low</option>
                    </select>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">Send Notification</button>
                    <a href="@Url.Action("Profile", "Instructors")" class="btn btn-secondary">Back to Profile</a>
                </div>
            </form>

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger mt-3">
                    @ViewData["ErrorMessage"]
                </div>
            }
        </div>
    </div>
</div>

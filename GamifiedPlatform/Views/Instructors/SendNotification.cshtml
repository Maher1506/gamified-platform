@model GamifiedPlatform.Models.Notification

@{
    ViewData["Title"] = "Send Notification to Learner";
}

<h2>Send Notification to Learner</h2>

@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">
        @ViewData["SuccessMessage"]
    </div>
}

<form asp-action="SendNotification" method="post">
    <div class="form-group">
        <label for="LearnerID">Learner ID</label>
        <input type="number" class="form-control" id="LearnerID" name="LearnerID" required />
    </div>

    <div class="form-group">
        <label for="Message">Message</label>
        <textarea class="form-control" id="Message" name="Message" rows="4" required></textarea>
    </div>

    <div class="form-group">
        <label for="UrgencyLevel">Urgency Level</label>
        <select class="form-control" id="UrgencyLevel" name="UrgencyLevel" required>
            <option value="High">High</option>
            <option value="Medium">Medium</option>
            <option value="Low">Low</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Send Notification</button>
    <a href="@Url.Action("Profile", "Instructors")" class="btn btn-secondary mt-3">Back to Profile</a>
</form>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @ViewData["ErrorMessage"]
    </div>
}

@model IEnumerable<GamifiedPlatform.Models.Instructor>

@{
    ViewData["Title"] = "Instructors";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">@ViewData["Title"]</h2>
    </div>

    <!-- Table Section -->
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.LatestQualification)</th>
                        <th>@Html.DisplayNameFor(model => model.ExpertiseArea)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.User.UserId)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.LatestQualification)</td>
                            <td>@Html.DisplayFor(modelItem => item.ExpertiseArea)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.User.UserId)</td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.InstructorId" class="btn btn-outline-warning">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.InstructorId" class="btn btn-outline-secondary">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.InstructorId" class="btn btn-outline-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

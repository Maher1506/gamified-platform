@model GamifiedPlatform.Models.Quest

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Quest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DifficultyLevel" class="control-label"></label>
                <input asp-for="DifficultyLevel" class="form-control" />
                <span asp-validation-for="DifficultyLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Criteria" class="control-label"></label>
                <input asp-for="Criteria" class="form-control" />
                <span asp-validation-for="Criteria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <!-- Deadline Field as DateTime -->
            <div class="form-group">
                <label asp-for="deadline" class="control-label"></label>
                <input asp-for="deadline" class="form-control" type="datetime-local" />
                <span asp-validation-for="deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@model GamifiedPlatform.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card">
        <div class="card-header text-white bg-primary">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </form>
        </div>
        <div class="card-footer text-center">
            <div class="text-danger">
                @Html.ValidationSummary(true)
            </div>
        </div>
    </div>
</div>

<style>
    .card-header {
        text-align: center;
        font-weight: bold;
    }

    .card-body {
        padding: 30px;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 4px;
        padding: 10px;
        font-size: 16px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>

@model IEnumerable<GamifiedPlatform.Models.LearningActivity>

@{
    ViewData["Title"] = "Learning Activities";
}

<div class="container mt-5">

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">@ViewData["Title"]</h1>
    </div>

    <!-- Table Section -->
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.ActivityType)</th>
                        <th>@Html.DisplayNameFor(model => model.InstructionDetails)</th>
                        <th>@Html.DisplayNameFor(model => model.MaxPoints)</th>
                        <th>@Html.DisplayNameFor(model => model.Module.ModuleId)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.ActivityType)</td>
                            <td>@Html.DisplayFor(modelItem => item.InstructionDetails)</td>
                            <td>@Html.DisplayFor(modelItem => item.MaxPoints)</td>
                            <td>@Html.DisplayFor(modelItem => item.Module.ModuleId)</td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.ActivityId" class="btn btn-outline-primary">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.ActivityId" class="btn btn-outline-secondary">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.ActivityId" class="btn btn-outline-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
